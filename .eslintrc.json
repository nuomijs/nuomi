{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": ["prettier"],
  "rules": {
    "func-names": "off",
    "no-return-assign": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "linebreak-style": "off",
    "max-len": ["error", {"code": 120}],
    "prefer-destructuring": "off",
    "react/static-property-placement": "off",
    "react/sort-comp": "off",
    "react/destructuring-assignment": "off",
    "react/jsx-props-no-spreading": "off",
    "jsx-a11y/anchor-has-content": "off"
  },
  "globals": {
    "global": true,
    "window": true
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "impliedStrict": true,
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
